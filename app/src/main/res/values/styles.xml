<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3D5089</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#5AFF2C</item>
    </style>

    <style name="GreenTheme" parent="FirebaseUI">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">#3D5089</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">#667bbb</item>

        <item name="colorControlNormal">#D8DFFD</item>
        <item name="colorControlActivated">#667bbb</item>
        <item name="colorControlHighlight">@color/material_green_a200</item>
        <item name="android:windowBackground">#1D2541</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlHighlight">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
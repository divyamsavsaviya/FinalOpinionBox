<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#667bbb">

    <androidx.cardview.widget.CardView
        android:id="@+id/poll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#1d2541"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/userImage"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                app:srcCompat="@mipmap/ic_launcher_foreground" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp"
                android:layout_weight="1"
                android:text="Rahul Sharma"
                android:textColor="#d8dffd"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:layout_marginTop="40dp"
            android:background="#1d2541"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:background="@drawable/gradient_border" />


            <TextView
                android:id="@+id/poll_question"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="What should be the criteria for being a member of the student council?"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/seek_bar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:max="100"
                android:progress="24"
                android:progressDrawable="@drawable/progress_track"
                android:thumb="@android:color/transparent"
                app:layout_constraintStart_toStartOf="@id/poll_question"
                app:layout_constraintTop_toBottomOf="parent" />

            <TextView
                android:id="@+id/poll_option1"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:layout_marginTop="-40dp"
                android:gravity="center_vertical"
                android:paddingStart="32dp"
                android:paddingLeft="32dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:text="Student Voting"
                android:textColor="#d8dffd"
                app:layout_constraintEnd_toStartOf="@id/poll_question"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />

            <TextView
                android:id="@+id/poll_percent1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="-40dp"
                android:gravity="center|end|center_vertical"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:paddingEnd="32dp"
                android:paddingRight="32dp"
                android:text=" "
                android:textColor="#d8dffd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/poll_question" />

            <SeekBar
                android:id="@+id/seek_bar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="100"
                android:progress="25"
                android:progressDrawable="@drawable/progress_track"
                android:thumb="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seek_bar1" />

            <TextView
                android:id="@+id/poll_option2"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:layout_marginTop="-40dp"
                android:gravity="center_vertical"
                android:paddingStart="32dp"
                android:paddingLeft="32dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:text="Staff Voting"
                android:textColor="#d8dffd"
                app:layout_constraintEnd_toStartOf="@id/poll_percent2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seek_bar1" />

            <TextView
                android:id="@+id/poll_percent2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="-40dp"
                android:gravity="right|center_vertical"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:paddingEnd="32dp"
                android:paddingRight="32dp"
                android:text=" "
                android:textColor="#d8dffd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seek_bar1" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>








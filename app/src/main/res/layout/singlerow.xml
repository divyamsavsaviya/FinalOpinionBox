<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#222b4a"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/event_1"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="18dp">

        <LinearLayout
            android:id="@+id/fulllist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/event_cardview_gradientbg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="400dp"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/dateid"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="14
                    September"

                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eventTitle"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:text="Explore:Github"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/event_cardview_gradientbg" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="400dp"
                android:layout_height="55dp">

                <TextView
                    android:id="@+id/eventOrganiserdefault"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="200dp"
                    android:gravity="center|right"
                    android:paddingRight="2dp"
                    android:text="Event Organiser:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/eventOrganiser"
                    android:layout_width="215dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="180dp"
                    android:layout_marginBottom="0dp"
                    android:paddingLeft="15dp"
                    android:gravity="center|left"
                    android:text="Club Gamma"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="400dp"
                android:layout_height="55dp">

                <TextView
                    android:id="@+id/eventTypedefault"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="200dp"
                    android:layout_marginBottom="0dp"
                    android:paddingRight="38dp"
                    android:gravity="center|right"
                    android:text="Event Topic:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/eventTopic"
                    android:layout_width="215dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="180dp"
                    android:paddingLeft="15dp"
                    android:gravity="center|left"
                    android:text="Workshop"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="400dp"
                android:layout_height="55dp">

                <TextView
                    android:id="@+id/eventVenuedefault"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="200dp"
                    android:paddingRight="30dp"
                    android:gravity="center|right"
                    android:text="Event Venue:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/eventVenue"
                    android:layout_width="215dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="180dp"
                    android:paddingLeft="15dp"
                    android:gravity="center|left"
                    android:text="CSPIT HALL-2"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="400dp"
                android:layout_height="45dp">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/event_cardview_gradientbg" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="290dp"
                    android:text="Interested"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>



